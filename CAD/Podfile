platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/Gridstone/SpecRepo-iOS.git'

workspace 'CAD'
project 'CAD.xcodeproj'
project '../ClientKit/ClientKit.xcodeproj'

def mpol_kit
    #pod 'MPOLKit', :git=> 'https://github.com/Gridstone/mPolKit-iOS'
    pod 'MPOLKit', :path => '../../mPolKit-iOS', :inhibit_warnings => false
end

target 'ClientKit' do
    project '../ClientKit/ClientKit.xcodeproj'
    mpol_kit
    
    target 'ClientKitTests' do
        inherit! :search_paths
    end
end

target 'CAD' do
    project 'CAD.xcodeproj'
    mpol_kit
    pod "HockeySDK", :configurations => ['internal-release', 'internal-debug']
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['ENABLE_BITCODE'] = 'NO'
            config.build_settings['SWIFT_VERSION'] = '3.2'
        end
    end
end
